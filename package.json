{
  "name": "kaleab",
  "description": "Kaleab S. Melkie's official website",
  "version": "2.7.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "dev": "cross-env NODE_OPTIONS='--inspect' next dev",
    "build": "next build",
    "start": "next start",
    "lint": "prettier pages/ public/ src/ *.{ts,json,md}",
    "format": "prettier --write pages/ public/ src/ *.{ts,json,md}"
  },
  "dependencies": {
    "next": "10.0.0",
    "next-compose-plugins": "2.2.0",
    "next-manifest": "3.0.1",
    "next-offline": "5.0.2",
    "next-seo": "4.14.1",
    "node-sass": "4.14.1",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-icons": "3.11.0"
  },
  "devDependencies": {
    "@types/node": "^14",
    "@types/react": "16.9.55",
    "@types/react-dom": "16.9.9",
    "cross-env": "7.0.2",
    "husky": "4.3.0",
    "prettier": "2.1.2",
    "typescript": "4.0.5"
  },
  "prettier": {
    "endOfLine": "lf",
    "semi": false,
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn build && yarn format && git update-index --again"
    }
  }
}
